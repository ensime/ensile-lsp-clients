{
	"name": "scala-lsp",
	"displayName": "Scala Language Server",
	"description": "A Scala language server based on Ensime and LSP",
	"icon": "images/scala-logo.png",
	"version": "0.1.0",
	"repository": {
		"url": ""
	},
	"bugs": {
		"url": ""
	},
	"publisher": "vovapolu",
	"engines": {
		"vscode": "^1.16.1"
	},
	"categories": [
		"Languages"
	],
	"activationEvents": [
		"workspaceContains:.ensime"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Scala Language Server configuration",
			"properties": {
				"scalaLanguageServer.logLevel": {
					"type": "string",
					"default": "DEBUG",
					"description": "Log level of the Scala Language Server. Possible values are \"DEBUG\", \"ERROR\", \"INFO\", and \"WARN\"."
				},
				"scalaLanguageServer.javaPath": {
					"type": [
						"string",
						"unde"
					],
					"default": null,
					"description": "Path to java"
				}
			}
		},
		"languages": [
			{
				"id": "scala",
				"aliases": [
					"Scala",
					"scala"
				],
				"extensions": [
					".scala"
				],
				"configuration": "./scala.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "scala",
				"scopeName": "source.scala",
				"path": "./syntaxes/scala.tmLanguage"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.2.1",
		"vscode": "^1.0.5",
		"@types/node": "^7.0.7",
		"tslint": "^4.5.1"
	},
	"dependencies": {
		"vscode-languageclient": "^3.1.0"
	}
}
